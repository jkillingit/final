<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="fas fa-shipping-fast"></i>
        </h2>
        <h1><%= @restaurant[:title] %></h1>
        <p><%= @restaurant[:description] %></p>
        <% for comment in @comments %>
            <% user = @users_table.where(:id => comments[:user_id]).to_a[0] %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <%= comments[:comment] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <a href="/restaurants/<%= @restaurant[:id] %>/comments/new" class="btn btn-primary">Comment</a>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>Phone Number</h3>
        <p><%= @restaurant[:date] %></p>
        <h3>Where?</h3>
        <p><%= @restaurant[:location] %></p>
    </div>
</div>